<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/itemback" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Item Name:" />

    <EditText
        android:id="@+id/edititemname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/edititemname"
        android:text="Date" />

    <Button
        android:id="@+id/edititemdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Pick date" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edititemdate"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Category" />

    <Spinner
        android:id="@+id/editcategory"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editcategory"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Amount Spent" />

    <EditText
        android:id="@+id/editamountspent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editamountspent"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Unit Of Currency" />

    <Spinner
        android:id="@+id/editunit"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:layout_below="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editunit"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Description" />

    <EditText
        android:id="@+id/editdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editdescription"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Geolocation" />

    <Button
        android:id="@+id/editgeolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/TextView11"
        android:text="Choose Location" />

    <Button
        android:id="@+id/editconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editgeolocation"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Save" />

    <TextView
        android:id="@+id/editPhotoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectPicBut"
        android:layout_alignLeft="@+id/selectPicBut"
        android:layout_marginLeft="14dp"
        android:textColor="@color/white"
        android:text="Photo Receipt"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/selectPicBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editconfirm"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/editgeolocation"
        android:longClickable="true"
        android:textColor="@color/white"
        android:onClick="choosePhoto"
        android:text="Edit Photo" />

</RelativeLayout>
