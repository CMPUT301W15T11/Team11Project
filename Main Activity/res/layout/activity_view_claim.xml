<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonClaimTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:text="Tags" />

        <Button
            android:id="@+id/buttonApproveSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Approved/Submitted" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewClaimName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:text="Name" />

    <TextView
        android:id="@+id/textViewClaimDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:text="Date" />

    <Button
        android:id="@+id/buttonClaimAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addExpenseItem"
        android:text="Add Expense Item" />

    <ListView
        android:id="@+id/expenseListView"
        android:layout_width="match_parent"
        android:layout_height="315dp" >
    </ListView>

</LinearLayout>